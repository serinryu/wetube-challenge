extends ../layout.pug

block content 
    div.profile__data
        if user.avatarUrl
            if isHeroku
                img(src=user.avatarUrl, crossorigin, width="100", height="100") 
            else 
                img(src="/"+user.avatarUrl, width="100", height="100") 

        h3=user.name
        br
        h6=user.email

        if loggedIn && String(user._id)==String(loggedInUser._id)
            button#edit-profile
                a(href=`/user/profile/${user.username}/edit`) Edit your profile  &rarr;
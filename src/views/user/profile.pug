extends ../layout.pug

block content 
    div.profile__data
        if user.avatarUrl
            if Heroku
                img(src=user.avatarUrl, crossorigin, width="100", height="100") 
            else 
                img(src="/"+user.avatarUrl, width="100", height="100") 

        h3=user.name
        h3=user.email

        if loggedIn
            div.edit-profile
                a(href=`/user/profile/${user.username}/edit`) Edit your profile  &rarr;
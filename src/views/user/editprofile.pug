extends ../layout.pug

block content 
    if errorMessage
        span.empty__message=errorMessage
    br
    if user.avatarUrl
        if isHeroku
            img(src=loggedInUser.avatarUrl, crossorigin, width="100", height="100") 
        else 
            img(src="/"+loggedInUser.avatarUrl, width="100", height="100") 

    form.upload__form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        label(for="name") Name
        input(name="name", placeholder="name",  type="text", required, value=user.name)
        label(for="email") Email
        input(name="email", placeholder="email", type="text", required, value=user.email)
        input(type="submit", value="Edit Profile", required).submitBtn

    div.edit-profile__password
        a(href="/user/changepassword") Change Password &rarr;
header 
    a(href="/").header__logo
        i.fab.fa-youtube  
        div Youtube

    nav
    include ../partials/filterForm.pug
    ul
        li
            a(href='/') Home
        li
            a(href='/movies/upload') Upload

        if loggedIn
            li
                a(href=`/user/logout`) Log out 
            li
                a(href=`/user/profile/${loggedInUser.username}`)
                    if loggedInUser.avatarUrl === undefined
                      span=loggedInUser.username
                    else
                      if isHeroku
                        img.header__avatar(src=loggedInUser.avatarUrl, crossorigin)
                      else
                        img.header__avatar(src="/"+loggedInUser.avatarUrl)
        else
            li
                a(href=`/user/join`) Join                      
            li
                a(href=`/user/login`) Login


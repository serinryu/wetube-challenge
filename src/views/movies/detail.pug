extends ../layout.pug
block content 
    if movie.fileUrl
        video(src="/" + movie.fileUrl, controls) 
    else 
        p No video file uploaded       
    h1=movie.title 
    p=movie.rating
    p=movie.year 
    p=movie.description 
    p=movie.summary 
    ul
        each genre in movie.genre
            li=genre
        else 
            li No genre found.

    a(href=`/movies/${movie.id}/edit`) Edit this movie  ➤
    br
    a(href=`/movies/${movie.id}/delete`) Delete this movie  ➤
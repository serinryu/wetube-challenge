extends ../layout.pug
block content 
    div#videoContainer(data-id=movie._id)
        if isHeroku
            video(src=movie.fileUrl, crossorigin)
        else 
             video(src="/"+movie.fileUrl)
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currenTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range", step="0.1", value=0.5, min="0" max="1")#volume
                span#mute
                    i.fas.fa-volume-up
            div
                span#fullScreen 
                    i.fas.fa-expand
    div.video__data
        p.video__title=movie.title   
        small.video__owner Uploaded by 
            a(href=`/user/profile/${movie.owner.username}`)=movie.owner.username
        small views: #{movie.meta.views}
        small Rating: #{movie.rating}
        small Release Year: #{movie.year} 
        small Description: #{movie.description}
        small Summary: #{movie.summary} 

    ul
        each genre in movie.genre
            li=`#${genre}`
        else 
            li No genre found.

    if loggedIn
        if String(movie.owner._id) === String(loggedInUser._id)
            div.edit-or-delete
                a(href=`/movies/${movie.id}/edit`) Edit this movie  ➤
                br
                a(href=`/movies/${movie.id}/delete`) Delete this movie  ➤

        div.video__add-comments
            form.video__comment-form#commentForm
                textarea(cols="30", rows="3", placeholder="Write a nice commment...")
                button#commentSubmit Add Comment 
    div.video__comments
        ul
            each comment in movie.comments.reverse()
                li.video__comment(data-id=comment._id)
                    i.fas.fa-comment
                    span  #{comment.text}
                    if loggedIn && (String(movie.owner._id) === String(loggedInUser._id))
                        span.delete-comment ❌


block script 
    script(src="/output/js/videoPlayer.js")
    if loggedIn
        script(src="/output/js/commentSection.js")